<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:rep="http://www.springframework.org/schema/data/jpa"
       xmlns:cache="http://www.springframework.org/schema/cache"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/data/jpa
        http://www.springframework.org/schema/data/jpa/spring-jpa.xsd
        http://www.springframework.org/schema/jee
        http://www.springframework.org/schema/jee/spring-jee.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/cache
        http://www.springframework.org/schema/cache/spring-cache.xsd">

    <context:component-scan base-package="ru.innopolis.course3"/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"
                  value="org.springframework.web.servlet.view.JstlView" />
        <property name="suffix" value=".jsp"/>
    </bean>


    <aop:aspectj-autoproxy />

    <context:annotation-config/>

    <bean id="userDaoChecker"
          class="ru.innopolis.course3.models.user.UserDaoChecker"/>

    <bean id="articleDaoChecker"
          class="ru.innopolis.course3.models.article.ArticleDaoChecker"/>
    <bean id="commentDaoChecker"
          class="ru.innopolis.course3.models.comment.CommentDaoChecker"/>

    <jee:jndi-lookup id="dataSource"
                     jndi-name="/jdbc/publishingis"
                     resource-ref="true" />

    <bean id="jdbcTemplate"
          class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource" />
    </bean>

    <bean id="transactionTemplate" class="org.springframework.transaction.support.TransactionTemplate">
        <property name="transactionManager" ref="transactionManager" />
    </bean>


    <bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>


    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor"/>

    <bean id="emf" class=
            "org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="publishing"/>
        <property name="dataSource" ref="dataSource" />
        <property name="jpaVendorAdapter" ref="jpaVendorAdapter"/>
        <property name="packagesToScan">
            <list>
                <value>ru.innopolis.course3</value>
            </list>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="javax.persistence.validation.mode">none</prop>
            </props>
        </property>

    </bean>

    <bean id="jpaVendorAdapter"
          class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="database" value="POSTGRESQL" />
        <property name="showSql" value="true"/><!--
        <property name="generateDdl" value="false"/>
        <property name="javax.persistence.validation.mode" value="NONE" />-->
        <property name="databasePlatform"
                  value="org.hibernate.dialect.PostgreSQL94Dialect" />
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="emf" />
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>

    <rep:repositories base-package="ru.innopolis.course3"
                      entity-manager-factory-ref="emf"
                      repository-impl-postfix="Impl"/>

    <cache:annotation-driven
            cache-manager="cacheManager"
            mode="proxy"
            proxy-target-class="true"/>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="ArticleService"/>
        <property name="service" ref="articleServiceImpl"/>
        <property name="serviceInterface" value="ru.innopolis.course3.ArticleService"/>
        <property name="registryPort" value="1199"/>
    </bean>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="CommentService"/>
        <property name="service" ref="commentServiceImpl"/>
        <property name="serviceInterface" value="ru.innopolis.course3.CommentService"/>
        <property name="registryPort" value="1199"/>
    </bean>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="UserService"/>
        <property name="service" ref="userServiceImpl"/>
        <property name="serviceInterface" value="ru.innopolis.course3.UserService"/>
        <property name="registryPort" value="1199"/>
    </bean>
    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="UserDetails"/>
        <property name="service" ref="authenticationUserService"/>
        <property name="serviceInterface" value="org.springframework.security.core.userdetails.UserDetailsService"/>
        <property name="registryPort" value="1199"/>
    </bean>


    <!--<bean id="cacheManagerFactory"
          class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation" value="classpath:ehcache.xml"/>
        <property name="shared" value="true"/>
        <property name="cacheManagerName" value="cacheManager"/>
    </bean>

    <bean id="myEhCacheManager"
          class="org.springframework.cache.ehcache.EhCacheCacheManager">
        <property name="cacheManager" ref="cacheManagerFactory"/>
    </bean>-->

    <bean id="cacheManager"
          class="org.springframework.cache.ehcache.EhCacheCacheManager"
          p:cacheManager-ref="ehcache"/>
    <bean id="ehcache"
          class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"
          p:shared="true"
          p:config-location="WEB-INF/ehcache.xml"/>

    <!--<bean id="cacheManager"
          class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation" value="classpath:ehcache.xml"/>
        <property name="shared" value="true"/>
        <property name="cacheManagerName" value="cacheManager"/>
    </bean>-->

</beans>
