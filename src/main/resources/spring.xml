<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd
                http://www.springframework.org/schema/aop
                http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <!--<aop:spring-configured/>-->

    <context:annotation-config/>

    <context:component-scan base-package="ru.innopolis.course3"/>

    <aop:config>
        <aop:aspect ref="articleDaoChecker">
            <aop:pointcut
                    id="articleDaoPointcut"
                    expression="target(ru.innopolis.course3.models.article.ArticleDao)"/>
            <aop:around
                    pointcut-ref="articleDaoPointcut"
                    method="checkArticleDao"/>
        </aop:aspect>

        <aop:aspect ref="commentDaoChecker">
            <aop:pointcut
                    id="commentDaoPointcut"
                    expression="target(ru.innopolis.course3.models.comment.CommentDao)"/>
            <aop:around
                    pointcut-ref="commentDaoPointcut"
                    method="checkCommentDao"/>
        </aop:aspect>

        <aop:aspect ref="userDaoChecker">
            <aop:pointcut
                    id="userDaoPointcut"
                    expression="target(ru.innopolis.course3.models.user.UserDao)"/>
            <!--<aop:pointcut-->
                    <!--id="userDaoArgsPointcut"-->
                    <!--expression="executed(ru.innopolis.course3.models.user.UserDao)"/>-->

            <!--<aop:before pointcut-ref="userDaoPointcut"-->
                        <!--method="checkArg"-->
                        <!--arg-names="o"/>-->

            <aop:around
                    pointcut-ref="userDaoPointcut"
                    method="checkUserDao"/>

        </aop:aspect>
    </aop:config>

    <bean id="userDaoChecker"
          class="ru.innopolis.course3.models.user.UserDaoChecker"/>
    <bean id="articleDaoChecker"
          class="ru.innopolis.course3.models.article.ArticleDaoChecker"/>
    <bean id="commentDaoChecker"
          class="ru.innopolis.course3.models.comment.CommentDaoChecker"/>

